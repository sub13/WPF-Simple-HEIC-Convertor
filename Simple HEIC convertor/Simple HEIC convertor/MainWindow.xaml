<Window x:Class="Simple_HEIC_convertor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Icon="apple1.ico"
        
        Title="Simple HEIC Convertor" Height="243" Width="537" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="0,0,12,-5" Height="217" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Выбрать файлы" Margin="83,0,328,90" VerticalAlignment="Bottom" Height="32" Grid.Column="1" Click="Button_Click"/>
        <Button Content="Путь сохранения" Margin="338,95,59,90" Grid.Column="1" Click="Button_Click_1"/>
        <RadioButton x:Name="RadioButton1" Grid.ColumnSpan="2" Content="JPG" HorizontalAlignment="Left" Margin="83,151,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.14,-1.003"/>
        <RadioButton x:Name="RadioButton2" Grid.ColumnSpan="2" Content="PNG" HorizontalAlignment="Left" Margin="83,178,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.14,-1.003"/>
        <Button Grid.ColumnSpan="2" Content="Конвертировать" HorizontalAlignment="Right" Margin="0,151,191,34" Width="119" Click="Button_Click_2"/>
        <ProgressBar x:Name="progressBar1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="37" Margin="83,34,0,0" VerticalAlignment="Top" Width="375"/>
        <Button Grid.ColumnSpan="2" Content="Справка" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Height="21" Click="Button_Click_3"/>

    </Grid>
</Window>
